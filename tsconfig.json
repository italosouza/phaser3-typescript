{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types", "typings"],
    "lib": ["dom", "es2015.promise", "es5"]
  },
  "include": ["./src/**/*", "./typings"]
}
